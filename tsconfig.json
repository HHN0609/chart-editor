{
    "exclude": [
        "node_modules",
        "server"
    ],
    "include": ["**/*.ts", "**/*.vue"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": [ "dom", "es5", "es2015.promise" ,"es2015", "es2017", "ES2019.Object"],
        "outDir": "./dist",
        "allowJs": true,
        "sourceMap": true,
        "target": "ES6",
        "module": "ESNext",
        "jsx": "preserve",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "./globalDeclare"
        ]
    }
}